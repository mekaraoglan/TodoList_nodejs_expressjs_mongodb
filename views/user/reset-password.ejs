<!DOCTYPE html>
<html lang="tr">

<head>

    <%- include('../partial/head') %>

</head>

<body>

    <%- include('../partial/navbar') %>

        <div class="page-container">
            <div class="content-wrap">

                <div class="container mt-5" style="margin-bottom: 320px">
                    <div class="row">

                        <%- include('../partial/user-account-menu') %>

                            <div class="col-md-4 mt-5">
                                <h4>Parola Yenileme</h4>
                                <form action="/reset-password" method="POST">
                                    <div class="form-group">
                                        <label for="newPassword">Yeni Parola</label>
                                        <input type="password" class="form-control" id="newPassword" name="newPassword"
                                            minlength="3" maxlength="100" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="confirmPassword">Yeni Parola TekrarÄ±</label>
                                        <input style="margin-bottom: 10px" type="password" class="form-control"
                                            id="confirmPassword" name="confirmPassword" minlength="3" maxlength="100"
                                            required>
                                    </div>
                                    <% if (typeof message !=='undefined' && message) { %>
                                        <div class="alert alert-<%= message.type %> alert-dismissible">
                                            <%= message.content %>
                                        </div>
                                        <% } %>
                                            <div class="form-group mt-2">
                                                <button type="submit" class="btn btn-success">Kaydet</button>
                                                <a href="/account" class="btn btn-secondary">Geri</a>
                                            </div>
                                </form>
                            </div>
                    </div>
                </div>

            </div>
            <footer>
                <%- include('../partial/footer') %>
            </footer>
        </div>

</body>

</html>